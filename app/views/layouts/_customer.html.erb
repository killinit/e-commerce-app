<table>
  <thead>
    <tr>
      <th width="150">Lesson</th>
      <th with="150">Status</th>
    </tr>
  </thead>
  <tbody>       
      <tr>
        <td>Lesson 1</td>
        <td><%= customer.lessons[0].status %></td>  
      </tr>
      <% customer.lessons.each_with_index do |lesson, index| %>
        <% if index != 0 %>
          <tr>
            <td>lesson <%= index + 1 %></td>
            <td><%= lesson.status %></td>
           </tr>
      <% end %><!-- end if -->
    <% end %><!-- end loop over lessons-->
  </tbody>
</table>