<div class="row">
  <div class="small-6 large-centered columns">
  	<h3>Instructor Dashboard</h3>
  	<p>Date: <input type="text" id="datepicker" /></p>
  </div>
</div>



<% @customers.each do |customer| %>
	<% customer.orders.each_with_index do |order, index| %>
		<div class="row">
		  <!-- <div class="large-4 columns">Order #<%#= index + 1 %></div> -->
		  <div class="large-4 columns"><%= order.quantity %> Lesson Package</div>
		  <div class="large-4 columns"></div>
		</div>
		<div class="row">
		  <div class="large-6 columns">
				<%= render partial: "layouts/schedule", object: order %>
			</div>
		  <div class="large-6 columns">
				<%= render partial: "layouts/contact", object: order.customer %>
			</div>
		</div>
	<% end %>
<% end %>

