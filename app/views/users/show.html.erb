<div class="row">
  <div class="small-3 small-centered columns">
  	<h3><%= "#{@customer.name_first}'s Dashboard" unless @customer.name_first.nil? %></h3>
  </div>
</div>

<% @customer.orders.each_with_index do |order, index| %>
	<div class="row">
	  <div class="large-4 columns">Order #<%= index + 1 %></div>
	  <div class="large-4 columns"><%= order.quantity %> Lesson Package</div>
	  <div class="large-4 columns"></div>
	</div>
	<div class="row">
	  <div class="large-6 columns">
			<%= render partial: "layouts/schedule", object: order %>
		</div>
		<div class="large-6 columns">
			<%= render partial: "layouts/contact", object: order.instructor %>
	  </div>
	</div><!--end .row-->
<% end %>
<div class="row">
	<div class="large-12 columns">
		<a href=<%= purchase_path %> class="button">Purchase Lessons</a>
	</div>
</div>