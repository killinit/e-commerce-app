<h3>My Dashboard</h3>

<table>
  <thead>
    <tr>
      <th width="200">Order</th>
      <th>Package</th>
      <th width="150">Price</th>
      <th width="150">Lesson</th>
      <th with="150">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @user.orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.quantity %> lesson package</td>
        <td><%= "$#{order.price / 100.0}" %></td> 
        <td>Lesson 1</td>
        <td><%= order.lessons[0].status %></td>           
      </tr>
      <% order.lessons.each_with_index do |lesson, index| %>
        <% if index != 0 %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>lesson <%= index + 1 %></td>
            <td><%= lesson.status %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
<div>
  <a href=<%= purchase_path %> class="small button">Purchase Lessons</a>
</div> 

